	$(CC) $(CFLAGS) $(RPATH_FLAGS) -o $@ $^ $(ROOT_DIR)/$(BUILD_LIB_DIR)/log.so $(ROOT_DIR)/$(BUILD_LIB_DIR)/sync.so $(ROOT_DIR)/$(BUILD_LIB_DIR)/tuple.so

