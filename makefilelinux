# Data structures
$(BUILD_TEST_DIR)/array_test: $(TESTS_DIR)/array_test.c | $(BUILD_TEST_DIR)
	$(CC) $(CFLAGS) $(RPATH_FLAGS) -o $@ $^ $(ROOT_DIR)/$(BUILD_LIB_DIR)/log.so $(ROOT_DIR)/$(BUILD_LIB_DIR)/sync.so $(ROOT_DIR)/$(BUILD_LIB_DIR)/pack.so $(ROOT_DIR)/$(BUILD_LIB_DIR)/array.so

